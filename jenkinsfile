pipeline {
  environment {
    registry = "mohamedelhaddioui/devopstp4"
        registryCredential = 'dockerhub'
        dockerImage = ''
        username = "mohamedelhaddioui99@gmail.com"
        password = "MOHAMED@elhaddioui99"
  }
  agent any

  stages {
    stage('Cloning Git') {
      steps {
        git 'https://github.com/MOHAMED-EL-HADDIOUI/Docker-Engine-Jenkins-CI-CD.git'
      }
    }

    stage('Building image') {
      steps {
        script {
          dockerImage = docker.build registry + ":$BUILD_NUMBER"
        }
      }
    }

    stage('Test image') {
      steps {
        script {
          echo "Tests passed"
        }
      }
    }

    stage('Publish Image') {
      steps {
        script {
          docker.withRegistry('', registryCredential) {
            dockerImage.push()
          }
        }
      }
    }
  }
}
